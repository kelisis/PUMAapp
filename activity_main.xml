<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/home"
    tools:context="com.example.lenovo.pumaapp.MainActivity">

    <ImageButton
        android:id="@+id/button_PEBLock"
        android:layout_height="110dp"
        android:layout_width="150dp"
        android:background="@drawable/homeone"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="151dp">
        </ImageButton>

    <ImageButton
        android:id="@+id/button_Information"
        android:layout_height="110dp"
        android:layout_width="150dp"
        android:background="@drawable/homefour"
        android:layout_below="@+id/button_PEBLock"
        android:layout_toEndOf="@+id/button_PEBLock"
        android:layout_marginStart="22dp"
        android:layout_marginTop="29dp">
    </ImageButton>

    <ImageButton
        android:id="@+id/button_Location"
        android:layout_height="110dp"
        android:layout_width="150dp"
        android:background="@drawable/hometwo"
        android:layout_above="@+id/button_Information"
        android:layout_alignStart="@+id/button_Information">
    </ImageButton>

    <ImageButton
        android:id="@+id/button_Settings"
        android:layout_height="110dp"
        android:layout_width="150dp"
        android:background="@drawable/homefive"
        android:layout_below="@+id/button_Information"
        android:layout_toStartOf="@+id/button_Information"
        android:layout_marginTop="30dp">
    </ImageButton>

    <ImageButton
        android:id="@+id/button_Community"
        android:layout_height="110dp"
        android:layout_width="150dp"
        android:background="@drawable/homethree"
        android:layout_above="@+id/button_Settings"
        android:layout_toStartOf="@+id/button_Information">
        </ImageButton>

    <ImageButton
        android:id="@+id/button_Personal"
        android:layout_height="110dp"
        android:layout_width="150dp"
        android:background="@drawable/homesix"
        android:layout_alignTop="@+id/button_Settings"
        android:layout_alignStart="@+id/button_Information">
        </ImageButton>

    <ImageButton
        android:id="@+id/button_bluetooth"
        android:layout_height="54dp"
        android:layout_width="54dp"
        android:background="@drawable/bluetooth"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button_Location"
        android:layout_marginTop="17dp">
        </ImageButton>

    <!--<com.example.lenovo.pumaapp.WaterWaveView
        android:id="@+id/wave_view"
        android:layout_marginTop="16dp"
        android:layout_marginStart="300dp"
        android:layout_width="80dp"
        android:layout_height="fill_parent"/>-->

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="272dp"
        android:id="@+id/frameLayout">

        <com.example.lenovo.pumaapp.WaterWaveView
            android:id="@+id/wave_view"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" />
    </FrameLayout>

</RelativeLayout>
